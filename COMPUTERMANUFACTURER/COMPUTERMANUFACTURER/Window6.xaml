<Window x:Class="COMPUTERMANUFACTURER.Window6"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:COMPUTERMANUFACTURER"
        mc:Ignorable="d"
        Title="Window6" Height="450" Width="800">
    <ScrollViewer>
        <Grid>
            <DataGrid x:Name="CONS_DATAGRID" x:FieldModifier="public" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Объем"          Width="0.5*" Binding="{Binding BATCHSIZE}"/>
                    <DataGridTextColumn Header="Цена"           Width="0.5*" Binding="{Binding PRICE}"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </ScrollViewer>
</Window>
