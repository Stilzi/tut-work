<Window x:Class="COMPUTERMANUFACTURER.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:COMPUTERMANUFACTURER"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Background="LightGoldenrodYellow">
            <Label  Content="Выберите таблицу" FontSize="30"     HorizontalAlignment="Center"/>
            <Button x:Name="choise1" Content="Производитель"     HorizontalAlignment="Center" Width="500" Height="50" Margin="15" FontSize="15" Click="choise1_Click"/>
            <Button x:Name="choise2" Content="Модель компьютера" HorizontalAlignment="Center" Width="500" Height="50" Margin="15" FontSize="15" Click="choise2_Click"/>
            <Button x:Name="choise3" Content="Реализатор"        HorizontalAlignment="Center" Width="500" Height="50" Margin="15" FontSize="15" Click="choise3_Click"/>
            <Button x:Name="choise4" Content="Партия"            HorizontalAlignment="Center" Width="500" Height="50" Margin="15" FontSize="15" Click="choise4_Click"/>
        </StackPanel>
    </Grid>
</Window>
