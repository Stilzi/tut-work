<Window x:Class="COMPUTERMANUFACTURER.Window7"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:COMPUTERMANUFACTURER"
        mc:Ignorable="d"
        Title="Window7" Height="450" Width="800">
    <ScrollViewer>
        <DockPanel>
            <DataGrid x:Name="DIS_DATAGRID" x:FieldModifier="public" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Название организации"          Width="0.5*" Binding="{Binding NAME}"/>
                    <DataGridTextColumn Header="Адрес реализатора"             Width="0.5*" Binding="{Binding ADDRESS}"/>
                    <DataGridTextColumn Header="Телефон"                       Width="0.5*" Binding="{Binding PHONE}"/>
                </DataGrid.Columns>
            </DataGrid>
        </DockPanel>
    </ScrollViewer>
</Window>
