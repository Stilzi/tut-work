<Window x:Class="COMPUTERMANUFACTURER.Window3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:COMPUTERMANUFACTURER"
        mc:Ignorable="d"
        Title="Window3" Height="422.348" Width="800">
    <Grid>
        <StackPanel Background="LightGoldenrodYellow">
            <Label   Content="Объем"                 FontSize="15" HorizontalAlignment="Center" Margin="10"/>
            <TextBox x:Name="INSERT_CONS_SIZE"       Width="500" Height="50" Margin="10"/>
            <Label   Content="Цена"                  FontSize="15" HorizontalAlignment="Center"/>
            <TextBox x:Name="INSERT_CONS_PRICE"      Width="500" Height="50" Margin="10"/>
            <Button  x:Name="INSERT_CONS"            Width="500" Height="50" Margin="20" Content="Ввод" Click="INSERT_CONS_Click"/>
            <Button  x:Name="VIEW_CONS"              Width="500" Height="50" Margin="10" Content="Открыть таблицу" Click="VIEW_CONS_Click"/>
        </StackPanel>
    </Grid>
</Window>
