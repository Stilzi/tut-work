<Window x:Class="COMPUTERMANUFACTURER.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:COMPUTERMANUFACTURER"
        mc:Ignorable="d"
        Title="Window1" Height="521.22" Width="800">
    <Grid>
        <StackPanel Background="LightGoldenrodYellow">
            <Label   Content="Название реализатора"   FontSize="15" HorizontalAlignment="Center" Margin="10"/>
            <TextBox x:Name="INSERT_DISTR_NAME"       Width="500" Height="50" Margin="10"/>
            <Label   Content="Адрес реализатора"      FontSize="15" HorizontalAlignment="Center"/>
            <TextBox x:Name="INSERT_DISTR_ADDRESS"    Width="500" Height="50" Margin="10"/>
            <Label   Content="Телефон реализатора"    FontSize="15" HorizontalAlignment="Center"/>
            <TextBox x:Name="INSERT_DISTR_PHONE"      Width="500" Height="50" Margin="10"/>
            <Button  x:Name="INSERT_DISTR"            Width="500" Height="50" Margin="20" Content="Ввод" Click="INSERT_DISTR_Click"/>
            <Button  x:Name="VIEW_DISTR"              Width="500" Height="50" Margin="10" Content="Открыть таблицу" Click="VIEW_DISTR_Click"/>
        </StackPanel>
    </Grid>
</Window>
